{% extends 'base.html.twig' %}

{% block title %}WTE - Users{% endblock %}

{% block body %}


<div class=container>
<div class=row>
    <div class="col-md-12">
    <table class="table">
        <caption>In database</caption>
        <thead>
        <tr>
            <th>User email</th>
            <th>Handle</th>
            <th>Group</th>
            <th>Grant admin</th>
            <th>Delete</th>
        </tr>
        </thead>
    {% for user in users %}
        <tr>
            <td>{{ user.email }}</td>
            <td>{{ user.handle }}</td>
            <td>{{ user.grp.name}}</a>
            {% if user.isAdmin() %}
            <td>ADMIN</td>
            {% else %}
            <td><a href="/admin/user/{{user.id}}/grant/"><img src=/gfx/ico_public.gif></a></td>
            {% endif %}
            <td><a href="/admin/user/{{user.id}}/del/"><img src=/gfx/ico_remove.gif></a></td>
        </tr>
    {% endfor %}
    </table>
    </div>
</div>
</div>

{% endblock %}
